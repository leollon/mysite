#!/bin/bash

set -o errexit

python manage.py makemigrations && python manage.py migrate
celery -A mysite worker -P gevent -c 500 -l INFO -f var/log/celery.log --pidfile run/celeryd.pid -D
celery flower -A mysite --adress=127.0.0.1 --port=5555 --auto_refresh=True &
celery -A mysite beat -s /mysite/run/celerybeat-schedule --pidfile run/celerybeat.pid --detach
uwsgi --ini /uwsgi.ini
